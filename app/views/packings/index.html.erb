<table cellpadding="0" cellspacing="0" border="0" class="display" id="example" width="100%">
	<thead>
		<tr>
			<th width="200">Name</th>
			<th width="150">Code</th>
			<th width="150">Operation</th>			
		</tr>
	</thead>
	<tbody>

		<% @packings.each do |packing| %>
		<tr>
			<td><%= packing.name %></td>
			<td><%= packing.code %></td>

			<td><%= link_to(raw("<i class='fi-zoom-in'></i>"),packing) %><%= ' ' %>
			<%= link_to(raw("<i class='fi-pencil'></i>"),edit_packing_path(packing)) %>
			<%= link_to(raw("<i class='fi-x'></i>"),packing, method: :delete, data: { confirm: 'Are you sure?' })%>		
			
		</tr>
		<% end %>

	</tbody>
</table>