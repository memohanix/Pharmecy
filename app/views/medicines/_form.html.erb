<%= form_for (@medicines) do |f| %>

<fieldset id="" class="">
	<legend>
		<h4>Add new Medicine</h4>
	</legend>
<%= render "shared/error_messages", :target=>@medicines %>
	<div class="row">
		<div class="small-3 large-2 columns">
			<label for="right-label" class="right inline">Name</label>
		</div>
		<div class="small-9 large-5 columns">
			<%= f.text_field :name %>
		</div>
		<div class="small-6 large-5 columns">

		</div>

	</div>
	<div class="row">
		<div class="small-3 large-2 columns">
			<label for="right-label" class="right inline">Description</label>
		</div>
		<div class="small-9 large-5 columns">
			<%= f.text_area :description,class:"small-5 textar" %>
		</div>
		<div class="small-6 large-5 columns">

		</div>
	</div>
	<div class="row">
		<div class="small-3 large-2 columns">
			<label for="right-label" class="right inline">Packing</label>
		</div>
		<div class="small-9 large-5 columns">
			<%= f.select :packing_id, options_from_collection_for_select(Packing.all, :id, :name),{},class:'custom chosen-select'  %>
		</div>
		<div class="small-6 large-5 columns">

		</div>
	</div>
	<div class="row">
		<div class="small-3 large-2 columns">
			<label for="right-label" class="right inline">Manufacturer</label>
		</div>
		<div class="small-9 large-5 columns">
			<%= f.text_field :manufacturer,class:"small-5" %>
		</div>
		<div class="small-6 large-5 columns">

		</div>
	</div>
	<div class="row">
		<div class="small-9 large-10 columns large-offset-2">
			<%= f.submit class:"button small" %>
		</div>

	</div>
</fieldset>
<% end %>